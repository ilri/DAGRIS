name = ILRI
description = Bootstrap 3 Theme for ILRI
core = 7.x
base theme = bootstrap

;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'

regions[parallax_section_1]     = 'Prallax Section 1'
regions[parallax_section_2]     = 'Prallax Section 2'
regions[parallax_section_3]     = 'Prallax Section 3'
regions[parallax_section_4]     = 'Prallax Section 4'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/font-awesome.min.css
stylesheets[all][] = css/style.min.css
stylesheets[all][] = css/overrides.min.css


;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

scripts[] = 'bootstrap/js/bootstrap.min.js'
scripts[] = 'js/queue.v1.min.js'
scripts[] = 'js/topojson.v0.min.js'
scripts[] = 'js/underscore-min.js'

; Disable BootstrapCDN so the compiled LESS source files can be used.
settings[bootstrap_cdn] = ''
